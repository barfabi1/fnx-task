{% extends 'base.html.twig' %}

{% block title %}{{ author.firstName }} {{ author.lastName }} articles list{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ author.firstName }} {{ author.lastName }} articles list</h1>

    {% for article in author.articles %}
        <p><a href="{{ path('article_show', {'id' : article.id}) }}">{{ article.title}}</a></p>
    {% endfor %}

</div>
{% endblock %}
