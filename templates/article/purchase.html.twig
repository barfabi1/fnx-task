{% extends 'base.html.twig' %}

{% block title %}Purchase confirm{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Purchase confirm</h1>

    <p>You bought access to the article.</p>
    </p>The charge is: <b>{{ article.price }} PLN</b></p>
    <p>Your account balance: <b>{{ app.user.wallet }} PLN</b><p>
    <p>You can read this article <a href="{{ path('article_show', { 'id' : article.id } ) }}">here</a></p>

</div>
{% endblock %}
